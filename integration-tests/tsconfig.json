{
    "compilerOptions": {
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "strict": true,
        "declaration": true,
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitThis": false,

        "lib": ["dom", "es2017", "esnext.asynciterable"]
    },
    
    "exclude": ["node_modules", "**/*.case.ts", "example", "dist"]
}
